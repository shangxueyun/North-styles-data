<!--pages/upload_file/realize_face.wxml-->
<!--//人脸识别//-->


<view class='item' hover-class='item_hover'>
      <view class='innerbox' hover-class='item_hover' wx:if="{{!IDN}}" id="IDN" bindtap="onImg">
        <image class='img-show-realize_face' src='https://china-mz.cn/bmimg/realize_face.png' mode='widthFix'></image>
      </view>
      <view wx:else class='img-show-bg_width'>
        <view>
        <image id="IDN-img" src="{{IDN}}" class='img-show_width1 positionA'  bindtap="previewImage"></image>
        <!-- 压缩后图片 -->
        <view  class='{{canvaspoperHide_1}}'>
         <canvas class='img-show_width1' bindtap="previewImage" style="top:{{canvas_top}};left:{{canvas_left}}" canvas-id="attendCanvasId" class="canvas"></canvas>
        </view>
       
        </view>

        <view id="IDN-shut" bindtap="closeImg" class='shut-btn'><text>X</text></view>
      </view> 
    </view>


<view class='heading02'>照片拍摄要求</view>
<view class='regulation'>
  <text class='redTxt'>1. 操作者必须是法定代表人本人</text>
  <text class='redTxt'>2. 背景不要背光</text>
  <text class='redTxt'>3. 人脸居中</text>
</view>

<view class='btnbox'>
  <button class='{{btnClass}}' hover-class='{{btnHoverClass}}' bindtap='showPoper'>上传</button>
</view>


<view class='poper' hidden='{{poperHide_1}}'>
  <view class='popbox'>
    <view class='iconbox icon_ok'></view>
    <text class='paragraph center'>人脸识别成功!</text>
    <view class='submitbox'>
      <button class='btn' hover-class='btn_hover' bindtap='to_SignContract'>确定</button>
    </view>
  </view>
</view>

